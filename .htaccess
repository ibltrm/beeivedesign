RewriteEngine On

# If the request is for index.html or index
RewriteRule ^index\.html$ / [R=301,L]
RewriteRule ^index$ / [R=301,L]

# If the request is for a non-existent file or directory
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# And the request + .html exists as a file
RewriteCond %{REQUEST_FILENAME}.html -f
# Internally rewrite the request to the .html file
RewriteRule ^(.*)$ $1.html [L]

# External redirect from actual .html URL to extensionless URL
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /.*\.html\ HTTP/
RewriteRule ^(.*)\.html$ $1 [R=301,L]
